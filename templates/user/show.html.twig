{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
<style>
    .user-show-wrapper {
        max-width: 700px;
        margin: 2rem auto;
        background: #ffffff;
        padding: 2rem;
        border-radius: 0.6rem;
        box-shadow: 0 6px 15px rgba(0,0,0,0.05);
    }

    .user-show-title {
        text-align: center;
        font-weight: 700;
        color: #2d6cdf;
        margin-bottom: 2rem;
    }

    .user-info-table th {
        width: 140px;
        color: #1e40af;
        font-weight: 600;
        background: #f1f5ff;
    }

    .user-info-table td {
        font-weight: 500;
    }

    .badge-role {
        background: #e0ecff;
        color: #1e40af;
        font-weight: 600;
        padding: 0.35rem 0.6rem;
        border-radius: 0.4rem;
        margin-right: 0.3rem;
        display: inline-block;
    }

    .user-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1.5rem;
        flex-wrap: wrap;
        gap: 1rem;
    }
</style>

<div class="user-show-wrapper">

    <h1 class="user-show-title">Détail utilisateur</h1>

    <table class="table user-info-table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>
                    {% for role in user.roles %}
                        <span class="badge-role">{{ role|replace({'ROLE_':''}) }}</span>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="user-actions">
        <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
            ← Retour à la liste
        </a>

        {{ include('user/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}