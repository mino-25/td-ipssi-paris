
{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1 class="mb-4">List of users</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-primary">Show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center text-danger">No user found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
