{% extends 'base.html.twig' %}

{% block title %}Nouvel Article{% endblock %}

{% block body %}
<style>
    .article-form-wrapper {
        max-width: 900px;
        margin: 2rem auto;
        background: #ffffff;
        padding: 2rem;
        border-radius: 0.6rem;
        box-shadow: 0 6px 15px rgba(0,0,0,0.05);
    }

    .article-form-title {
        text-align: center;
        font-weight: 700;
        color: #2d6cdf;
        margin-bottom: 2rem;
    }

    .article-form-wrapper label {
        font-weight: 600;
        margin-bottom: 0.4rem;
    }

    .article-form-wrapper .form-control,
    .article-form-wrapper .form-select {
        border-radius: 0.4rem;
        padding: 0.6rem 0.75rem;
    }

    .article-form-wrapper textarea {
        min-height: 160px;
        resize: vertical;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin-top: 1.5rem;
        gap: 1rem;
    }
</style>

<div class="article-form-wrapper">

    <h1 class="article-form-title">Créer un nouvel article</h1>

    {{ include('article/_form.html.twig', {'button_label': 'Créer'}) }}

    <div class="form-actions">
        <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">
            ← Retour à la liste
        </a>
    </div>

</div>
{% endblock %}