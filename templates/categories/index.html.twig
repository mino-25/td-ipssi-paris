
{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Liste des cat√©gories{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1 class="mb-4">List of categories</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <th scope="row">{{ category.id }}</th>
                <td>{{ category.name }}</td>
                <td>{{ category.content }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center text-danger">No category available</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_category_new') }}" class="btn btn-success mt-3 px-4 py-2">Create a new category</a>
    {% endif %}
</div>
{% endblock %}
